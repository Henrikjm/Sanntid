FORK = (get -> put -> FORK).
PHIL = (sit -> left.get -> right.get -> eat -> right.put -> left.put -> rise -> PHIL).
PHILR = (sit -> right.get -> left.get -> eat -> left.put -> right.put -> rise -> PHILR).

||DINERS(N=5) = 
	forall [i:0..N-1]
		if i==0 then
			(phil[i]:PHILR || {phil[i].left, phil[((i-1)+N)].right}::FORK)
		else
			(phil[i]:PHIL || {phil[i].left, phil[((i-1)+N)].right}::FORK).